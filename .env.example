# =============================================================================
# CLAW-BENCH Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# -----------------------------------------------------------------------------
# AWS Configuration (Required for live instance benchmarking)
# -----------------------------------------------------------------------------

# AWS Region for EC2 instances
AWS_REGION=us-east-2

# AMI ID for clawdbot instances (pre-baked with clawdbot)
# Get from: aws ec2 describe-images --owners self --filters "Name=name,Values=clawgo-*"
CLAWGO_AMI_ID=ami-032b488fc8129bd8d

# Security group allowing inbound traffic on port 18789 (gateway) and 22 (SSH)
# Get from: aws ec2 describe-security-groups --filters "Name=group-name,Values=clawgo*"
CLAWGO_SECURITY_GROUP_ID=sg-0e74034640362fe53

# EC2 Key Pair name for SSH access
# Create with: aws ec2 create-key-pair --key-name claw-bench --query 'KeyMaterial' --output text > ~/.ssh/claw-bench.pem
CLAWGO_KEY_PAIR_NAME=alex-pc

# Path to SSH private key (must match key pair above)
CLAW_SSH_KEY=~/.ssh/alex-pc.pem

# Instance type for benchmarks (t3.small is cheapest, t3.medium for better performance)
BENCHMARK_INSTANCE_TYPE=t3.small

# -----------------------------------------------------------------------------
# AWS Bedrock Configuration (for the instances to call LLMs)
# -----------------------------------------------------------------------------

# AWS credentials for Bedrock API calls (used by clawdbot on instances)
# These get passed to the instance via UserData
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BEDROCK_REGION=us-east-1

# -----------------------------------------------------------------------------
# OpenRouter Configuration (Alternative to Bedrock)
# -----------------------------------------------------------------------------

# OpenRouter API Key for testing models outside AWS Bedrock
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Optional: Default model for OpenRouter testing
# OPENROUTER_MODEL=moonshotai/kimi-k2.5

# -----------------------------------------------------------------------------
# Benchmark Configuration
# -----------------------------------------------------------------------------

# Timeout for each test (seconds)
CLAW_TIMEOUT=120

# Auto-terminate instances after benchmark completes (true/false)
AUTO_TERMINATE=true

# Keep instance running for debugging failed tests (true/false)
KEEP_ON_FAILURE=false

# -----------------------------------------------------------------------------
# TRIBE/MUSE Configuration (Optional - for parallel benchmarking)
# -----------------------------------------------------------------------------

# Enable MUSE parallel execution
USE_MUSE=false

# Number of parallel benchmark instances
PARALLEL_INSTANCES=2
